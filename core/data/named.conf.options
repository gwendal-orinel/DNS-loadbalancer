options {
        directory "/var/cache/bind";
        dnssec-validation no;

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { none; };
        allow-query { any; };
        allow-recursion { none; };
        allow-query-cache { none; };
        allow-transfer{ any; };
        version none;
        hostname none;
        server-id none;
        minimal-responses yes;
};
